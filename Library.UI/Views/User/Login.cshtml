@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using Library.UI.Controllers
@using Library.Business.Common


@model Library.UI.Models.User.LoginViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
