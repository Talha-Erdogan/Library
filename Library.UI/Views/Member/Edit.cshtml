@{
    ViewBag.Title = "Edit Member";
}
@model Library.UI.Models.Member.AddViewModel
<style>
    .dropdown-toggle {
        display: none;
        border-bottom: solid 1px #aaa;
    }
</style>
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>Edit Member</h2>
            </div>
            <div class="body">
                @using (Html.BeginForm("Edit", "Member", FormMethod.Post, new { @enctype = "multipart/form-data", id = "formMemberEdit" }))
                {
                    @Html.HiddenFor(m => m.Id);
                    <div class="form-group form-float">
                        <div class="help-info">Name</div>
                        <div class="form-line">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name)
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="help-info">Last Name</div>
                        <div class="form-line">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.LastName)
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="help-info">Phone</div>
                        <div class="form-line">
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Phone)
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="help-info">Phone</div>
                        <div class="form-line">
                            @Html.TextBoxFor(m => m.TC, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.TC)
                        </div>
                    </div>

                    <div class="form-group form-float">
                        <div class="help-info" style="float:left;">Image</div>
                        <div class="form-line">
                            @Html.TextBoxFor(m => m.ImageFilePath, new { @class = "form-control", @type = "file", @name = "ImageFilePath", @id = "ImageFilePath" })
                            @Html.ValidationMessageFor(m => m.ImageFilePath)
                        </div>
                        @if (!string.IsNullOrEmpty( Model.ImageName))
                        {
                            <div>
                                @Model.ImageName
                            </div>
                        }
                    </div>
                    <input type="submit" id="send" value="Edit" class="btn bg-red waves-effect" />
                    <a class="btn bg-yellow waves-effect" href="~/Member/List">
                        Cancel
                    </a>
                }
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function() {
            var Issucces = '@ViewBag.Issuccess';
            if (Issucces=="True") {
                swal({
                    title: "Edited!",
                    text: "Edited successfully!!",
                    type: "success"
                    }, function() {
                        window.location.href = "@Url.Action("List", "Member")";
                    });
            }
            else if (Issucces=="False") {
                swal({
                    title: "Error!",
                    text: "An error occurred!",
                    type: "error"
                    });
            }
            else {
            }
        });
    </script>
}
